<%- include('includes/header') %>
<%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <div class="col-lg notVisibleOnCollapse" >
  </div>
  <div class="col-lg-9 pt-1" >
    <div class="">
      <div style="width: 100%;position: relative;">
        <img class="department-batch-group-cover-image" src="/images/sponsor-banner2.png" />
        <div class="text-center">
          <h5>
            <strong>
              <span class="text-primary d-block" > Groups Type : <span class="text-capitalize"><%=groupsData.groupType%></span></span>
            </strong>
          </h5>  
        </div>
      </div>  
    </div>
    <hr>
    
    <div class="item-container">
      <h5 class="bolder ">All Running <span class="text-capitalize"><%=groupsData.groupType%></span> Groups : (<%=groupsData.groups.length%>)</h5>
      <hr style="margin-bottom: .85rem;margin-top: 0rem;">
      <div class="row pb-2">
        <%if(!groupsData.groups.length){%>
          <div class="btn btn-lg btn-info btn-block">There is no <%=groupsData.status%> group in <span class="text-capitalize"><%=groups.groupType%></span> Group</div>
        <%}else{%>
          <%groupsData.groups.forEach((group)=>{%>
            <div class="col-sm-4 col-md-3">
              <a href="/campus-group/<%=group._id%>/details" style="text-decoration: none;">
                <div class="activity-link-container-small">
                  <img class="activity-cover-image"  src="/images/activity-banner.jpg" alt="">
                  <div class="text-left" style="padding-bottom: 5px;padding-left: 2px;">
                    <span class="d-block"><strong>Group Name : <%=group.groupName%></strong></span>
                    <span class="d-block">Present Members : <%=group.presentMembers%>/<%=group.expectedMembers%></span>
                    <i class="d-block">Created Date : <%= group.createdDate.getDate() %> <%=group.createdDate.toLocaleString('default', { month: 'short' }) %> , <%= group.createdDate.getFullYear() %></i>
                    <i class="d-block">Expiring Date : <%= group.expiringDate.getDate() %> <%=group.expiringDate.toLocaleString('default', { month: 'short' }) %> , <%= group.expiringDate.getFullYear() %></i>
                  </div>
                </div>
              </a>
          </div>
          <%})%>
        <%}%> 
      </div>
      
      </div>

    

  </div>
  <div class="col-lg notVisibleOnCollapse" >
  </div>
</div>


<%- include('includes/footer') %>