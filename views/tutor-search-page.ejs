<%- include('includes/header') %>
<%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <div class="col" ></div>
  <div class="col-lg-8 text-center" style="margin-bottom: 2rem;margin: 0;padding: 0;" >
    <div class="logIn-form-container mt-4 mb-4 text-center">   
      <h2 class="bolder">Home-tutor Searching</h2>
      <i class="d-block text-center"><strong>[You will get the best tutors from our NBU community]</strong></i>
      <hr>
      <form action="/search-home-tutor" method="POST" id="home-tutor-search">
          <select name="selectedClass" id="selectedClass" class="form-control form-control-lg space"  form="home-tutor-search">
            <option class="text-center" value="">------Pleace select your class level------</option>
            <option value="1-10">Class 1-10</option>
            <option value="11-12">Class 11-12</option>
            <option value="graduation">Graduation</option>
          </select>
          <select name="selectedStream" id="selectedStream" class="form-control form-control-lg space"  form="home-tutor-search">
            <option class="text-center" value="">------Pleace select stream/subject------</option>
            <option value="science">Science</option>
            <option value="arts">Arts</option>
            <option value="commarts">Commarts</option>
            <%allDepartments.forEach((departmentName)=>{%>
              <option value="<%=departmentName%>"><%=departmentName%></option>
            <%})%>
          </select>
        
        <button class="btn btn-info btn-block btn-lg mt-2"><i class="fas fa-search"></i> Search Tutor</button>
      </form>
      <hr>
      <a href="/contact-us"><button class="btn btn-secondary  btn-lg btn-block">Contact us for any issue</button></a> 
    </div>
  </div>
  <div class="col" ></div>
</div>
<%- include('includes/footer') %>