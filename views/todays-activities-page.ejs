<%- include('includes/header') %>
<%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <div class="col-lg notVisibleOnCollapse" >
  </div>
  <div class="col-lg-9 pt-1" >
    <img class="home-cover-image" src="/images/todays-activities.png"/>
    <hr>
    <h5 class="bolder text-success">Todays Activities :</h5>
    <div class="item-container">
        <%if(!activities.todaysActivity.length){%>
            <div class="colored-container">
              <div class="btn btn-block btn-info">
                No activity scheduled for today!!
              </div>
            </div>
          <%}else{%>
            <%activities.todaysActivity.forEach((activity)=>{%>
              <a href="/activity/<%=activity._id%>/details" style="text-decoration: none;">
                <div class="mt-2" style="display: flex;border-bottom: 1px solid gray;border-radius: 5px;background-color: #f0f2f5;">
                  <div class="text-center" style="position: relative;">
                    <img class="horizontal-activity-cover-photo"  src="/image/activity-banner/medium/<%=activity._id%>" alt="">
                    <div class="batch-no "><i class="fa-duotone fa-circle-play"></i></div>
                  </div>
                    <div style="width: 100%;" class="ml-2 mr-2">
                        <div  style="color: #080700;font-weight: 400;">
                          <span class="d-block text-primary"><strong><span class="text-capitalize"><%=activity.activityType%></span> Activity | <%=activity.sourceName%> 
                            <%if(activity.activityType=="batch"){%>
                              (20<%=activity.activitySourceId.slice(0,2)%>-20<%=activity.activitySourceId.slice(2,4)%>)
                            <%}%>
                            </strong> 
                          </span>
                          <h5  class="d-block"><strong>
                            <%if(activity.title){%>
                                <%=activity.title%>
                            <%}else{%>
                                [Title is not given yet]
                            <%}%>
                             | 
                             <%if(activity.topic){%>
                                <%=activity.topic%>
                            <%}else{%>
                                [No topic selected]
                            <%}%>
                           </strong></h5>
                           <span  class="d-block"><strong><i>Created Date : <%= activity.createdDate.getDate() %> <%=activity.createdDate.toLocaleString('default', { month: 'short' }) %> , <%= activity.createdDate.getFullYear() %></i></strong></span>
                           <span  class="d-block"><strong><i>Activity Date : <%= activity.activityDate.getDate() %> <%=activity.activityDate.toLocaleString('default', { month: 'short' }) %> , <%= activity.activityDate.getFullYear() %></i></strong></span>
                           <hr style="margin-bottom: .25rem;margin-top: 0rem;">
                           <strong>Activity Short Details : </strong> 
                            <%if(activity.shortDetails){%>
                                <%=activity.shortDetails%>
                            <%}else{%>
                                [Activity Short Details is not given.]
                            <%}%>
                        </div>
                    </div>
                </div>
              </a>
            <%})%>
          <%}%>    
    </div>
    
    <hr>
    <h5 class="bolder text-info">Upcomming-Activities :</h5>
    <div class="item-container">
        <%if(!activities.upcommingActivity.length){%>
            <div class="colored-container">
              <div class="btn btn-block btn-info">
                No upcomming activity there!!
              </div>
            </div>
          <%}else{%>
            <%activities.upcommingActivity.forEach((activity)=>{%>
              <a href="/activity/<%=activity._id%>/details" style="text-decoration: none;">
                <div class="mt-2" style="display: flex;border-bottom: 1px solid gray;border-radius: 5px;background-color: #f0f2f5;">
                  <div class="text-center" style="position: relative;">
                    <img class="horizontal-activity-cover-photo"  src="/image/activity-banner/medium/<%=activity._id%>" alt="">
                    <div class="batch-no "><i class="fa-duotone fa-circle-play"></i></div>
                  </div>
                    <div style="width: 100%;" class="ml-2 mr-2">
                        <div  style="color: #080700;font-weight: 400;">
                          <span class="d-block text-primary"><strong><span class="text-capitalize"><%=activity.activityType%></span> Activity | <%=activity.sourceName%> 
                            <%if(activity.activityType=="batch"){%>
                              (20<%=activity.activitySourceId.slice(0,2)%>-20<%=activity.activitySourceId.slice(2,4)%>)
                            <%}%>
                            </strong> 
                          </span>
                          <h5  class="d-block"><strong>
                            <%if(activity.title){%>
                                <%=activity.title%>
                            <%}else{%>
                                [Title is not given yet]
                            <%}%>
                             | 
                             <%if(activity.topic){%>
                                <%=activity.topic%>
                            <%}else{%>
                                [No topic selected]
                            <%}%>
                           </strong></h5>
                           <span  class="d-block"><strong><i>Created Date : <%= activity.createdDate.getDate() %> <%=activity.createdDate.toLocaleString('default', { month: 'short' }) %> , <%= activity.createdDate.getFullYear() %></i></strong></span>
                           <span  class="d-block"><strong><i>Activity Date : <%= activity.activityDate.getDate() %> <%=activity.activityDate.toLocaleString('default', { month: 'short' }) %> , <%= activity.activityDate.getFullYear() %></i></strong></span>
                           <hr style="margin-bottom: .25rem;margin-top: 0rem;">
                           <strong>Activity Short Details : </strong> 
                            <%if(activity.shortDetails){%>
                                <%=activity.shortDetails%>
                            <%}else{%>
                                [Activity Short Details is not given.]
                            <%}%>
                        </div>
                    </div>
                </div>
              </a>
            <%})%>
          <%}%>
    </div>
    

  </div>
  <div class="col-lg notVisibleOnCollapse" >
  </div>
</div>

<%- include('includes/footer') %>
