<div class="item-container" >
    <div class="logIn-form-container mt-4 mb-4 ">
        <div class="colored-container">
            <h2 class="bolder text-white text-center">Student's Account Verification</h2>
            <form action="/goto-verification-page" method="POST" id="goto-verify-form">
                <div class="form-group">
                    <label for="regNumber-register" class="text-muted"><small>Registration Number :</small></label>
                    <input name="regNumber" id="regNumber-register" class="form-control form-control-lg " type="text" placeholder="Enter Registration Number." required  autocomplete="off" />
                  </div>
                <div class="form-group">
                    <label for="verificationCase" class="text-muted mb-1"><small>Select Verification Type :</small></label>
                    <select id="verificationCase" name="verificationCase" class="form-control form-control-lg" required  form="goto-verify-form">
                      <option value="">---Select Verification Type---</option>
                      <option value="case3">Case-3</option>
                      <option value="case2">Case-2</option>
                    </select>
                </div>
                <button class="btn btn-info btn-block btn-lg">Go To Verification Page</button>
            </form>
        </div>   
      </div>
</div> 
