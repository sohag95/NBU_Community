<%- include('includes/header') %>
<%- include('includes/flash') %>


<div style="display: flex;flex-wrap: wrap;">
  <div class="col" ></div>
  <div class="col-lg-8 " style="margin-bottom: 2rem;margin: 0;padding: 0;" >
    <h2 class="uteach text-primary mt-4 mb-2 text-center">NBU Community Membership</h2>
    <div class="signUp-form-container ">   
      <h2 class="bolder text-center">Create new account</h2>
      <form action="/createNewAccount" method="POST" id="signUp-form">
        
          <strong class="text-primary"> User related data</strong>

          <div class="form-group">
            <label for="userName-register" class="text-muted"><small>Full name</small></label>
            <input name="userName" id="userName-register" class="form-control form-control-lg " type="text" placeholder="Your full name."  autocomplete="off" />
          </div>

          <div class="form-group">
            <label for="gender-register" class="text-muted"><small>Gender</small></label>
            <div id="gender-register" class="text-center" style="display: flex;">
              <div class="col-4 form-control form-control-lg ">
                Male <input name="gender" class="gender" id="gender-1" required value="male" type="radio"  autocomplete="off" />
              </div>
              <div class="col-4 form-control form-control-lg ">
                Female <input name="gender" class="gender" id="gender-2" required value="female"  type="radio"  autocomplete="off" />
              </div>
              <div class="col-4 form-control form-control-lg ">
                Custom <input name="gender" class="gender" id="gender-3" required value="custom" type="radio"  autocomplete="off" />
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="department" class="text-muted mb-1"><small>Select Department</small></label>
                <select id="department" class="form-control form-control-lg" name="departmentCode" form="registration-form">
                  <%allDepartments.forEach((department)=>{%>
                    <option value="<%=department.departmentCode%>"><%=department.departmentName%></option>
                  <%})%>
                </select>
              </div>
              
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="sessionYear" class="text-muted mb-1"><small>Select Session-Year</small></label>
                <select id="sessionYear" class="form-control form-control-lg" name="sessionYear" form="registration-form">
                  <%allSessionYears.forEach((sessionYear)=>{%>
                    <option value="<%=sessionYear%>"><%=sessionYear%></option>
                  <%})%>
                </select>
              </div>
            </div>
          </div>

          <hr>
          <strong class="text-primary"> Authentication related data</strong>

          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="email-register" class="text-muted"><small>Email Id <span class="text-danger">(Log In Purpose)</span></small></label>
                <input name="email" id="email-register" class="form-control form-control-lg " type="email" placeholder="Email Id"  autocomplete="off" />
              </div>
            </div>
            <div class="col-sm-6">
              <div class="form-group">
                <label for="phone-register" class="text-muted"><small>Phone Number <span class="text-warning">(Verification Purpose)</span></small></label>
                <input name="phone" id="phone-register" class="form-control form-control-lg " type="number" placeholder="Phone Number"  autocomplete="off" />
              </div>
            </div>
          </div>
          
          <div class="form-group">
            <label for="password-register" class="text-muted"><small>Password </small></label>
            <input name="password"  id="password-register" class="form-control form-control-lg " type="password" placeholder="New password" autocomplete="off" />
          </div>
          <div class="form-group">
            <label for="re-password-register" class="text-muted"><small>Confirm Password </small></label>
            <input name="rePassword"  id="re-password-register" class="form-control form-control-lg " type="password" placeholder="Confirm password" autocomplete="off" />
          </div>
          
          <div style="text-align: center;">
            <button class="btn btn-success btn-lg ">Sign up account</button>
          </div>
      </form>
      </div>
    </div>
  <div class="col" ></div>
</div>

  <%- include('includes/footer') %>

