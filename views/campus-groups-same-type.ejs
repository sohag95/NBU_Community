<%- include('includes/header') %>
<%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <div class="col-lg notVisibleOnCollapse" >
  </div>
  <div class="col-lg-9 pt-1" >
    <div class="">
      <div style="width: 100%;position: relative;">
        <img class="department-batch-group-cover-image" src="/images/sponsor-banner2.png" />
        <div class="text-center">
          <h5>
            <strong>
              <span class="text-primary d-block" > Groups Type : <span class="text-capitalize"><%=groups.groupType%></span></span>
            </strong>
          </h5>  
        </div>
      </div>  
    </div>
    <hr>
    
    <div class="item-container">
      <h5 class="bolder ">All Running <span class="text-capitalize"><%=groups.groupType%></span> Groups : (<%=groups.noOfRunningGroups%>)</h5>
      <hr style="margin-bottom: .85rem;margin-top: 0rem;">
      <div class="teacher-banner-container pb-2">
        <%if(!groups.runningGroups.length){%>
          <div class="btn btn-lg btn-info btn-block">There is no running group in <span class="text-capitalize"><%=groups.groupType%></span> Group</div>
        <%}else{%>
          <%groups.runningGroups.forEach((group)=>{%>
            <a href="/campus-group/<%=group._id%>/details" style="text-decoration: none;">
              <div class="activity-link-container-small">
                <img class="activity-cover-image"  src="/images/activity-banner.jpg" alt="">
                <div class="text-left" style="padding-bottom: 5px;padding-left: 2px;">
                  <span class="d-block"><strong>Group Name : <%=group.groupName%></strong></span>
                  <span class="d-block">Present Members : <%=group.presentMembers%>/<%=group.expectedMembers%></span>
                  <i class="d-block">Created Date : <%=group.createdDate%></i>
                  <i class="d-block">Expiring Date : <%=group.expiringDate%></i>
                </div>
              </div>
            </a>
          <%})%>
        <%}%> 
      </div>
      <%if(groups.runningGroups.length){%>
        <a href="/campus-groups/type/<%=groups.groupType%>/running">
          <div class="btn btn-outline-info btn-sm btn-block">See All Running <span class="text-capitalize"><%=groups.groupType%></span> Groups</div>
        </a>
      <%}%>
      
      </div>

    <div class="item-container mt-3">
      <h5 class="bolder ">All Completed <span class="text-capitalize"><%=groups.groupType%></span> Groups :</h5>
      <hr style="margin-bottom: .85rem;margin-top: 0rem;">
      <div class="teacher-banner-container pb-2">
        <%if(!groups.completedGroups.length){%>
          <div class="btn btn-lg btn-info btn-block">There is no completed group in <span class="text-capitalize"><%=groups.groupType%></span> Group</div>
        <%}else{%>
          <%groups.completedGroups.forEach((group)=>{%>
            <a href="/campus-group/<%=group._id%>/details" style="text-decoration: none;">
              <div class="activity-link-container-small">
                <img class="activity-cover-image"  src="/images/activity-banner.jpg" alt="">
                <div class="text-left" style="padding-bottom: 5px;padding-left: 2px;">
                  <span class="d-block"><strong>Group Name : <%=group.groupName%></strong></span>
                  <span class="d-block">Present Members : <%=group.presentMembers%>/<%=group.expectedMembers%></span>
                  <i class="d-block">Created Date : <%=group.createdDate%></i>
                  <i class="d-block">Expiring Date : <%=group.expiringDate%></i>
                </div>
              </div>
            </a>
          <%})%>
        <%}%>
        
        
      </div>
      <%if(groups.completedGroups.length){%>
      <a href="/campus-groups/type/<%=groups.groupType%>/completed">
        <div class="btn btn-outline-info btn-sm btn-block">See All Completed <span class="text-capitalize"><%=groups.groupType%></span> Groups</div>
      </a>
      <%}%>
      
    </div>

  </div>
  <div class="col-lg notVisibleOnCollapse" >
  </div>
</div>


<%- include('includes/footer') %>