
  <!-- ############--Post Structure--############ -->  
<a href="/activity/<%=previousActivityData._id%>/details" class="d-block" style="text-decoration: none;">     
  <div class="mb-2">
    <div class="item-container" >
      <div style="display: flex;">
        <div class="text-center">
          <%let logoLink=""%>
          <%if(previousActivityData.activityType=="batch"){%>
            <% logoLink="/images/batch.jpg"%>
          <%}else if(previousActivityData.activityType=="department"){%>
            <% logoLink="/images/department.jpg"%>
          <%}else{%>
            <% logoLink="/images/group.jpg"%>
          <%}%>
          <img class="activity-avatar-small" src="<%=logoLink%>" alt="">
        </div>
        <div class="post-header" style="width: 100%;display: flex;">
          <div class="mr-auto" style="padding-left: 5px;">
            <div style="margin: 0;padding: 0;">
              <strong class="text-primary">
                <span class="text-capitalize"><%=previousActivityData.activityType%></span>  
                | <%=previousActivityData.sourceName%> 
                <%if(previousActivityData.activityType=="batch"){%>
                  (20<%=previousActivityData.activitySourceId.slice(0,2)%>-20<%=previousActivityData.activitySourceId.slice(2,4)%>)
                <%}%>
              </strong>
            </div>
            <div style="margin: 0;padding: 0;">
              <i><span>Published on <%= previousActivityData.publishedDate.getDate() %> <%=previousActivityData.publishedDate.toLocaleString('default', { month: 'short' }) %>, <%= previousActivityData.publishedDate.getFullYear() %></span></i> <span style="font-weight: 500;">.</span><i class="fas fa-user-friends fa-sm"></i>
            </div>
          </div>
          <div class="float-right">
            <p style="margin-right: 8px;" type="button"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <strong><i class="fas fa-ellipsis-h"></i></strong>
            </p>
            <div class="dropdown-menu dropdown-menu-right">
              <p class="dropdown-item text-primary" >For Post Owner</p>
            </div>
          </div>
        </div>
      </div>
      <hr style="margin-bottom: .35rem;margin-top: 2px;">
      
      <div class="activityCoverPhotoContainer">
          <img class="activityCoverPhoto" src="/image/activity-banner/large/<%=previousActivityData._id%>" alt="">
      </div>
      
      
      <div style="margin-bottom: 5px; border-bottom: 1px solid rgb(126, 124, 124);">
        <h6 style="margin-bottom: 0px;">
          <i class="d-block">
            <span class="text-capitalize"><%=previousActivityData.activityType%></span> activity | Conducted on <%= previousActivityData.activityDate.getDate() %> <%=previousActivityData.activityDate.toLocaleString('default', { month: 'short' }) %>, <%= previousActivityData.activityDate.getFullYear() %>
          </i>
        </h6>
        <h5 class="bolder">
          <%=previousActivityData.title%> | <%=previousActivityData.topic%>
        </h5>
      </div>

      <div style="display: flex;">
        <div class="text-left" style="width: 50%;">
          <i class="far fa-thumbs-up"></i><span> <%=previousActivityData.likes%> <%= previousActivityData.likes>1  ? 'Likes' : 'Like'%></span>
        </div>
        <div class="text-right" style="width: 50%;">
          <span><%=previousActivityData.comments%> <%= previousActivityData.comments>1  ? 'Comments' : 'Comment'%> </span> 
        </div>
      </div>
      <!-- comment section -->
      </div>
  </div>
</a>
  

