<%- include('includes/header') %> 
<%- include('includes/flash') %>
<div style="display: flex;flex-wrap: wrap;">
  <div class="col-lg notVisibleOnCollapse" >
  </div>
  <div class="col-lg-9 pt-1" >
    <div class="">
      <div style="width: 100%;position: relative;">
        <img class="home-cover-image" src="/images/sponsor-banner.png"/>
        <div>
          <img class="home-profile-image" src="/images/sohag.jpg" />
          <div>
            <h5 class="bolder text-secondary d-inline"><strong>Sohag Roy</strong></h5>
            <h5 class="bolder d-inline float-right"><i class="fas fa-user"></i> Video Editor</h5>
          </div>  
         </div>
      </div> 
      <hr>
        
    </div>
    <div class="item-container" >
      <div id="accordion">
        <div class="card">
          <div class="card-header" id="headingOneEditor">
            <h5 class="mb-0">
              <button class="btn btn-link" data-toggle="collapse" data-target="#collapseOneEditor" aria-expanded="true" aria-controls="collapseOneEditor">
                <strong>Newly Assigned Activities (<%=assignedActivities.newAssigned.length%>)</strong>
              </button>
            </h5>
          </div>
          <div id="collapseOneEditor" class="collapse show" aria-labelledby="headingOneEditor" data-parent="#accordion">
            <div class="card-body">
              <%if(!assignedActivities.newAssigned.length){%>
                <div class="btn btn-block btn-info btn-lg">There is no activity on this status section.</div>
              <%}else{%>
                <%assignedActivities.newAssigned.forEach((activity,index)=>{%>
                  <div class="student-room-container">
                    <h5 class="text-warning text-center"><strong>(<%=index+1%>)</strong></h5>
                    <strong class="d-block">Source : <i><%=activity.sourceName%></i> </strong>
                    <strong class="d-block">Source Id : <i><%=activity.activitySourceId%></i> </strong>
                    <strong class="d-block">Assigned Date : <%=activity.assignedDate%></strong>
                    <h6 class="bolder text-warning"><strong>Status : </strong><%=activity.status%></h6>
                    <p><strong>Note : </strong><%=activity.videoEditorNote%></p>
                    <a href="/activity/<%=activity._id%>/details" class="btn btn-block btn-sm btn-info">
                      Go to activity details...
                    </a>
                  </div>
                <%})%>
              <%}%>
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingTwoEditor">
            <h5 class="mb-0">
              <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseTwoEditor" aria-expanded="false" aria-controls="collapseTwoEditor">
                <strong>Accepted Activities (<%=assignedActivities.accepted.length%>)</strong> 
              </button>
            </h5>
          </div>
          <div id="collapseTwoEditor" class="collapse" aria-labelledby="headingTwoEditor" data-parent="#accordion">
            <div class="card-body">
              <%if(!assignedActivities.accepted.length){%>
                <div class="btn btn-block btn-info btn-lg">There is no activity on this status section.</div>
              <%}else{%>
                <%assignedActivities.accepted.forEach((activity,index)=>{%>
                  <div class="student-room-container">
                    <h5 class="text-warning text-center"><strong>(<%=index+1%>)</strong></h5>
                    <strong class="d-block">Source : <i><%=activity.sourceName%></i> </strong>
                    <strong class="d-block">Source Id : <i><%=activity.activitySourceId%></i> </strong>
                    <strong class="d-block">Assigned Date : <%=activity.assignedDate%></strong>
                    <h6 class="bolder text-warning"><strong>Status : </strong><%=activity.status%></h6>
                    <p><strong>Note : </strong><%=activity.videoEditorNote%></p>
                    <a href="/activity/<%=activity._id%>/details" class="btn btn-block btn-sm btn-info">
                      Go to activity details...
                    </a>
                  </div>
                <%})%>
              <%}%>
            
            </div>
          </div>
        </div>
        <div class="card">
          <div class="card-header" id="headingThreeEditor">
            <h5 class="mb-0">
              <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapseThreeEditor" aria-expanded="false" aria-controls="collapseThreeEditor">
              <strong>Edited Activities (<%=assignedActivities.edited.length%>)</strong>  
              </button>
            </h5>
          </div>
          <div id="collapseThreeEditor" class="collapse" aria-labelledby="headingThreeEditor" data-parent="#accordion">
            <div class="card-body">
              <%if(!assignedActivities.edited.length){%>
                <div class="btn btn-block btn-info btn-lg">There is no activity on this status section.</div>
              <%}else{%>
                <%assignedActivities.edited.forEach((activity,index)=>{%>
                  <div class="student-room-container">
                    <h5 class="text-warning text-center"><strong>(<%=index+1%>)</strong></h5>
                    <strong class="d-block">Source : <i><%=activity.sourceName%></i> </strong>
                    <strong class="d-block">Source Id : <i><%=activity.activitySourceId%></i> </strong>
                    <strong class="d-block">Assigned Date : <%=activity.assignedDate%></strong>
                    <h6 class="bolder text-warning"><strong>Status : </strong><%=activity.status%></h6>
                    <p><strong>Note : </strong><%=activity.videoEditorNote%></p>
                    <a href="/activity/<%=activity._id%>/details" class="btn btn-block btn-sm btn-info">
                      Go to activity details...
                    </a>
                  </div>
                <%})%>
              <%}%>
            
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="path text-center text-warning mt-2"   >
      <div class="btn btn-block btn-success"><strong>See All Edited Activities -></strong></div>
    </div>
  </div>
  <div class="col-lg notVisibleOnCollapse" >
  </div>
</div>

<!-- New designing page till upper section -->

<%- include('includes/footer') %>