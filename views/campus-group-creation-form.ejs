<%- include('includes/header') %>
<%- include('includes/flash') %>

<div style="display: flex;flex-wrap: wrap;">
  <div class="col" ></div>
  <div class="col-lg-8 " style="margin-bottom: 2rem;margin: 0;padding: 0;" >
    <h2 class="uteach text-primary mt-4 mb-2 text-center">NBU Campus Group Creation</h2>
    <div class="signUp-form-container ">   
      <h2 class="bolder text-center">Create Campus Group</h2>
      <form action="/create-campus-group" method="POST" id="create-campus-group-form">

          <div class="form-group">
            <label for="groupType" class="text-muted mb-1"><small>Select Group Type :-</small></label>
            <select name="groupType" id="groupType" class="form-control form-control-lg"  form="create-campus-group-form">
              <option value="social_Work">Social Work Group</option>
              <option value="research">Research Group</option>
              <option value="business">Business Group</option>
              <option value="cultural">Cultural Group</option>
              <option value="skill_Development">Skill Development Group</option>
            </select>
          </div>
              
          <div class="form-group">
            <label for="group-name" class="text-muted"><small>Give group name :-</small></label>
            <input name="groupName" id="group-name" class="form-control form-control-lg " type="text" placeholder="Choose a group name." required autocomplete="off" />
          </div>
            
          <div class="form-group">
            <label for="expected-members" class="text-muted"><small>Number of members expected :-</small></label>
            <input name="expectedMembers" id="expected-members" class="form-control form-control-lg " type="number" placeholder="Enter number of members on group you want." required autocomplete="off" />
          </div>

          <div class="form-group">
            <label for="aim-of-group" class="text-muted mb-1"><small>Write the aim of the group :-</small></label>
            <textarea  name="aimOfGroup" id="aim-of-group" class="body-content small-textarea form-control" type="text" placeholder="Write the aim of the group shortly."></textarea>
          </div>
          
          <div style="text-align: center;">
            <button class="btn btn-success btn-lg ">Create campus group</button>
          </div>
      </form>
      </div>
    </div>
  <div class="col" ></div>
</div>

<%- include('includes/footer') %>