              <div class="text-left" style="padding-bottom: 5px;padding-left: 2px;">
                <span class="d-block"><strong><%=activity.title.slice(0,30)%>... | <%=activity.topic%> </strong></span>
                <span class="d-block">Dept - <%=activity.sourceName%> 
                </span>
                <i class="d-block">Published On <%= activity.publishedDate.getDate() %> <%=activity.publishedDate.toLocaleString('default', { month: 'short' }) %> , <%= activity.publishedDate.getFullYear() %> </i>
                <hr style="padding: 0;margin:0;">
                <div class="d-flex">
                  <i class="d-block mr-auto"><%=activity.likes%> <%=activity.likes>1?"Likes":"Like"%></i>
                  <i class="d-block "><%=activity.comments%> <%=activity.likes>1?"Comments":"Comment"%></i>
                </div>
              </div>
            </div>
          </a>
        <%})%>
        </div>
      <%}%>
  </div>
    
  <hr>
  <div class=" item-container mb-1" style="background-color:#f0f2f5 ;">
    <h5 class="bolder text-">Group Activities :</h5>
      <%if(!activities.groupActivities.length){%>
        <div class="colored-container">
          <div class="btn btn-block btn-info">
            No group activity conducted till now!!
          </div>
