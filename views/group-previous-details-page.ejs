<%- include('includes/header') %> 
<%- include('includes/flash') %>

    <div style="display: flex;flex-wrap: wrap;">
      <div class="col-lg notVisibleOnCollapse" >
      </div>
      <div class="col-lg-9 pt-1" >
        <div class="">
          <div style="width: 100%;position: relative;">
            <img class="department-batch-group-cover-image" src="/image/group-banner/large/<%=groupDetails.groupId%>" width="1000" height="250"/>
            <div class="text-center">
              <h5>
                <strong>
                  <span class="text-primary" > Group Name : <%=groupDetails.groupName%></span>
                </strong>
              </h5>  
            </div>
          </div>  
          <hr>
          <div class="d-flex justify-content-center">
            <%groupDetails.presentDepartments.forEach((department)=>{%>
              <a href="/department/<%=department.departmentCode%>/details"><span class="button"><%=department.departmentName%></span></a>
            <%})%>
          </div>
          <hr>
        </div>
        <h5 class="text-primary text-center"><strong >Group's Previous Details</strong></h5>
        <hr>
        <div class="item-container">
          <strong><h5 class="bolder">All X/Previous Leaders (<%=groupDetails.allXLeaders.length%>)</h5></strong>
          <hr style="margin-bottom: .85rem;margin-top: 0rem;">
          <%if(!groupDetails.allXLeaders.length){%>
            <div class="colored-container">
              <div class="btn btn-lg btn-block btn-info">There is no X-Leader on this group!!</div>
            </div>
          <%}else{%>  
            <%if(groupDetails.allXLeaders.length==1){%>
              <div class="col">
                <div class="member-container">
                  <img class="member-avatar"  src="/image/profile/medium/profile-<%=groupDetails.allXLeaders[0].regNumber%>" alt="">
                  <div class="name-container">
                    <strong class="d-block ml-2" style="width: 100%;"><a href="/student/<%=groupDetails.allXLeaders[0].regNumber%>/profile"><%=groupDetails.allXLeaders[0].userName%></a></strong>
                    <strong class="d-block float-right"><i class="fas fa-ellipsis-h"></i></strong>
                  </div>
                </div>
              </div>
            <%}else{%>
              <%let middle=parseInt(groupDetails.allXLeaders.length/2)%>
              <div style="display: flex;    flex-wrap: wrap;">
                <div class="col-md-6 left-member-container" >
                  <%for(let i=0;i<middle;i++){%>
                    <div class="member-container">
                      <img class="member-avatar"  src="/image/profile/medium/profile-<%=groupDetails.allXLeaders[i].regNumber%>" alt="">
                      <div class="name-container">
                        <strong class="d-block ml-2" style="width: 100%;"><a href="/student/<%=groupDetails.allXLeaders[i].regNumber%>/profile"><%=groupDetails.allXLeaders[i].userName%></a></strong>
                        <strong class="d-block float-right"><i class="fas fa-ellipsis-h"></i></strong>
                      </div>
                    </div>
                  <%}%>
                </div>
                <div class="col-md-6 right-member-container" >
                  <%for(let j=middle;j<groupDetails.allXLeaders.length;j++){%>
                  <div class="member-container">
                    <img class="member-avatar"  src="/image/profile/medium/profile-<%=groupDetails.allXLeaders[j].regNumber%>" alt="">
                    <div class="name-container">
                      <strong class="d-block ml-2" style="width: 100%;"><a href="/student/<%=groupDetails.allXLeaders[j].regNumber%>/profile"><%=groupDetails.allPresentMembers[j].userName%></a></strong>
                      <strong class="d-block float-right"><i class="fas fa-ellipsis-h"></i></strong>
                    </div>
                  </div>
                  <%}%>
                </div>
              </div>
            <%}%>
          <%}%>
        </div> 
        <hr>
        <div class="item-container">
          <strong><h5 class="bolder">All X/Previous Members (<%=groupDetails.allXMembers.length%>)</h5></strong>
          <hr style="margin-bottom: .85rem;margin-top: 0rem;">
          <%if(!groupDetails.allXMembers.length){%>
            <div class="colored-container">
              <div class="btn btn-lg btn-block btn-info">There is no X-Member on this group!!</div>
            </div>
          <%}else{%>  
            <%if(groupDetails.allXMembers.length==1){%>
              <div class="col">
                <div class="member-container">
                  <img class="member-avatar"  src="/image/profile/medium/profile-<%=groupDetails.allXMembers[0].regNumber%>" alt="">
                  <div class="name-container">
                    <strong class="d-block ml-2" style="width: 100%;"><a href="/student/<%=groupDetails.allXMembers[0].regNumber%>/profile"><%=groupDetails.allXMembers[0].userName%></a></strong>
                    <strong class="d-block float-right"><i class="fas fa-ellipsis-h"></i></strong>
                  </div>
                </div>
              </div>
            <%}else{%>
              <%let middle=parseInt(groupDetails.allXMembers.length/2)%>
              <div style="display: flex;    flex-wrap: wrap;">
                <div class="col-md-6 left-member-container" >
                  <%for(let i=0;i<middle;i++){%>
                    <div class="member-container">
                      <img class="member-avatar"  src="/image/profile/medium/profile-<%=groupDetails.allXMembers[i].regNumber%>" alt="">
                      <div class="name-container">
                        <strong class="d-block ml-2" style="width: 100%;"><a href="/student/<%=groupDetails.allXMembers[i].regNumber%>/profile"><%=groupDetails.allXMembers[i].userName%></a></strong>
                        <strong class="d-block float-right"><i class="fas fa-ellipsis-h"></i></strong>
                      </div>
                    </div>
                  <%}%>
                </div>
                <div class="col-md-6 right-member-container" >
                  <%for(let j=middle;j<groupDetails.allXMembers.length;j++){%>
                  <div class="member-container">
                    <img class="member-avatar"  src="/image/profile/medium/profile-<%=groupDetails.allXMembers[j].regNumber%>" alt="">
                    <div class="name-container">
                      <strong class="d-block ml-2" style="width: 100%;"><a href="/student/<%=groupDetails.allXMembers[j].regNumber%>/profile"><%=groupDetails.allPresentMembers[j].userName%></a></strong>
                      <strong class="d-block float-right"><i class="fas fa-ellipsis-h"></i></strong>
                    </div>
                  </div>
                  <%}%>
                </div>
              </div>
            <%}%>
          <%}%>
        </div>
      </div>
      <div class="col-lg notVisibleOnCollapse" >
      </div>
    </div>
    
    <%- include('includes/footer') %>
